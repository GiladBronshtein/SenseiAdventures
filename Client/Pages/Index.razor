 @page "/"
 @inject NavigationManager Nav

 <style>

     body {
    background-image: url('../assets-images/bg.jpg');
    background-size: cover;
}


</style>

<div class="cover-container d-flex w-100 h-100 p-3 mx-auto flex-column">
    <main class="px-3">
        <div class="container-fluid">
            <div class="card shadow" style="background: rgba(255, 255, 255, 0.5); backdrop-filter: blur(12px); border-radius: 6px;">
                <div class="card-body text-center">
                    
                    <div class="one">
                        <h1>Sensei Adventures</h1>
                    </div>
                    <p class="lead">משחק VR מעצים למידה עם עורך מתקדם</p>
                    

                    <div class="mb-2" style="max-width: 400px; margin: auto;">
                        <iframe src="https://player.vimeo.com/video/533879616" frameborder="0" allow="autoplay; fullscreen; picture-in-picture" 
                        allowfullscreen style="width: 100%; height: 250px; border-radius: 10px; box-shadow: 0 4px 8px rgba(0,0,0,0.5); background: #000;"></iframe>
                    </div>

                    <h6 style="color: #1c1c1e;">המשתמש שמחובר כעת: @UserId</h6>
                    <button @onclick="NavigateToEditor" class="btn btn-primary mt-4" 
                    style="font-weight: bold;  transition: transform 0.2s; padding: 10px 20px;">כניסה לעורך</button>
                </div>
            </div>
        </div>
    </main>
</div>




@code {
    [CascadingParameter]
    public int UserId { get; set; }

    private void NavigateToEditor()
    {
        Nav.NavigateTo("./maintable");
    }
}


